@model IEnumerable<Rhythm.Areas.ChiefAdmin.Models.PortfolioViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/ChiefAdmin/Views/Shared/_Layout.cshtml";
}

<div class="container relative">
    <h2 class="align-center font-alt uppercase">Posts</h2>
    <div class="blog-item-body container">
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Summary)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Skills)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WorkExp)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MyProjects)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Education)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AdditionalInfo)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Summary)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Skills)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WorkExp)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MyProjects)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Education)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AdditionalInfo)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.PortfolioID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.PortfolioID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.PortfolioID })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>