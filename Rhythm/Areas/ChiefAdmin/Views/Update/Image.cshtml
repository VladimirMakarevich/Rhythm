@model Rhythm.Areas.ChiefAdmin.Models.ImageAdminViewModel
@{
    Layout = "~/Areas/ChiefAdmin/Views/Shared/_Layout.cshtml";
}

<br /><br /><br />
<h2 class="align-center font-alt uppercase">Edit Post</h2>
<!-- Section -->
<section class="page-section">
    <div class="container relative">
        <p>
            <div class="form-actions no-color">
                <a href="@Url.Action("listPosts", "Home", new { id = Model.Id })" class="submit_btn btn btn-mod btn-small btn-round" id="submit_btn"> Back to List </a> |
                <a href="@Url.Action("Image", "Delete", new { id = Model.Id } )" class="btn btn-mod btn-round  btn-small"> Delete Image </a>
            </div>
        </p>
        <!-- Form -->
        @using (Html.BeginForm("Image", "Update", FormMethod.Post, new { enctype = "multipart/form-data", @role = "form", @class = "form" }))
            {
            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(m => m.ImagePath)
            @Html.Label("Photo Description: ", new { @for = "exampleInputFile" })
            <div class="mb-20 mb-md-10">
                <!-- Description -->
                @Html.TextBoxFor(m => m.ImageMime, new { @name = "ImageMime", @id = "ImageMime", @class = "input-md form-control", @placeholder = "Photo Description" })
            </div>

                @Html.Label("Load Photo: ")
                <div class="mb-20 mb-md-10">
                    @Html.TextBoxFor(m => m.FileBase, new { @type = "file", id = "FileBase", @value = "Save" })
                    <p class="help-block">
                        Choose photo
                    </p>
                </div>
                @Html.Label("Now: ")
                <div class="mb-20 mb-md-10">
                    @if (Model.ImageData != null)
                    {
                        <img width="300" height="300" src="@Url.Action("GetImage", "Home", new { id = Model.Id })" />
                    }
                </div>
                <div class="clearfix">
                    <div class="cf-left-col">
                        <!-- Inform Tip -->
                        <div class="form-tip pt-20">
                            <i class="fa fa-info-circle"></i> All the fields are required
                        </div>
                    </div>
                    <div class="cf-right-col">
                        <!-- Send Button -->
                        <div class="align-right pt-10">
                            <button type="submit" class="submit_btn btn btn-mod btn-small btn-round" id="submit_btn">Save Image</button>
                        </div>
                    </div>
                </div>
        }
    </div>
</section>