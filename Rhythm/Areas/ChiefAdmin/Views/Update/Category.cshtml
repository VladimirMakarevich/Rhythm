@model Rhythm.Areas.ChiefAdmin.Models.CategoryAdminViewModel

@{
    Layout = "~/Areas/ChiefAdmin/Views/Shared/_Layout.cshtml";
}

<br /><br /><br />
<h2 class="align-center font-alt uppercase">Change Category</h2>
<!-- Section -->
<section class="page-section">
    <div class="container relative">
        <div>
            <a href="@Url.Action("listCategories", "Home")" class="submit_btn btn btn-mod btn-small btn-round" id="submit_btn"> Back to List </a>
        </div>
        <br />

        <!-- Form -->
        @using (Html.BeginForm("Category", "Update", FormMethod.Post, new { @class = "form" }))
        {
            @Html.HiddenFor(m => m.CountCategory)
            @Html.Label("Name: ", new { @for = "exampleInputFile" })
            <div class="mb-20 mb-md-10">
                <!-- Name -->
                @Html.TextBoxFor(m => m.Name, new { @class = "input-md form-control", @placeholder = "Name" })
            </div>

            @Html.Label("UrlSlug: ", new { @for = "exampleInputFile" })
            <div class="mb-20 mb-md-10">
                <!-- Title -->
                @Html.TextBoxFor(m => m.UrlSlug, new { @class = "input-md form-control", @placeholder = "UrlSlug" })
            </div>

            @Html.Label("Descriprion Category: ", new { @for = "exampleInputFile" })
            <div class="mb-20 mb-md-10">
                @Html.TextAreaFor(m => m.DescriptionCategory, new { @class = "input-md round form-control", @style = "height: 84px;", @placeholder = "Descriprion Category" })
            </div>

            <div class="clearfix">
                <div class="cf-left-col">
                    <!-- Inform Tip -->
                    <div class="form-tip pt-20">
                        <i class="fa fa-info-circle"></i> All the fields are required
                    </div>
                </div>
                <div class="cf-right-col">
                    <!-- Send Button -->
                    <div class="align-right pt-10">
                        <button type="submit" class="submit_btn btn btn-mod btn-small btn-round" id="submit_btn">Save Category</button>
                    </div>
                </div>
            </div>
        }
    </div>
</section>