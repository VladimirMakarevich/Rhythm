@model Rhythm.Areas.ChiefAdmin.Models.CommentAdminViewModel

@{
    Layout = "~/Areas/ChiefAdmin/Views/Shared/_Layout.cshtml";
}
<br /><br /><br />
<h2 class="align-center font-alt uppercase">Change comment</h2>
<!-- Section -->
<section class="page-section">
    <div class="container relative">

        <!-- Form -->
        @using (Html.BeginForm("Comment", "Update", FormMethod.Post, new { @class = "form" }))
        {

            @Html.Label("Name: ", new { @for = "exampleInputFile" })
            <div class="mb-20 mb-md-10">
                <!-- Name -->
                @Html.TextBoxFor(m => m.NameUserSender, new { @class = "input-md form-control", @placeholder = "Name" })
            </div>

            @Html.Label("Description: ", new { @for = "exampleInputFile" })
            <div class="mb-20 mb-md-10">
                <!-- Title -->
                @Html.TextBoxFor(m => m.EmailUserSender, new { @class = "input-md form-control", @placeholder = "Description" })
            </div>

            @Html.Label("Comment: ", new { @for = "exampleInputFile" })
            <div class="mb-20 mb-md-10">
                @Html.TextAreaFor(m => m.CommentMessage, new { @class = "input-md round form-control", @style = "height: 84px;", @placeholder = "Comment" })
            </div>
            @*@Html.HiddenFor(m => m.ID)*@
            @Html.HiddenFor(m => m.PostId)
            @Html.HiddenFor(m => m.PostedOn)
            <div class="clearfix">
                <div class="cf-left-col">
                    <!-- Inform Tip -->
                    <div class="form-tip pt-20">
                        <i class="fa fa-info-circle"></i> All the fields are required
                    </div>
                </div>
                <div class="cf-right-col">
                    <!-- Send Button -->
                    <div class="align-right pt-10">
                        <button type="submit" class="submit_btn btn btn-mod btn-medium btn-round" id="submit_btn">Save Comment</button>
                    </div>
                </div>
            </div>
        }
    </div>
</section>