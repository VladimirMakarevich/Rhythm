@model Rhythm.Areas.ChiefAdmin.Models.ChiefUserAdminViewModel

@{
    Layout = "~/Areas/ChiefAdmin/Views/Shared/_Layout.cshtml";
}

<section class="page-section">
    <div class="container relative">
        <div class="row">
            <!-- Content -->
            <div class="col-lg-12">
                <h2 class="align-center font-alt uppercase">User @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</h2>
                <h2>Delete</h2>

                <h3>Are you sure you want to delete this?</h3>
                <br />
                @using (Html.BeginForm())
            {

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="submit_btn btn btn-mod btn-small btn-round" id="submit_btn" /> |
                        <a href="@Url.Action("Index", "Users")" clas class="submit_btn btn btn-mod btn-small btn-round" id="submit_btn"> Back to List </a>
                    </div>
                }

                <div>
                    <h4>User</h4>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.FirstName)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.FirstName)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.LastName)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.LastName)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.MiddleName)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.MiddleName)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Birth)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Birth)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Email)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.HomeAddress)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.HomeAddress)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Skype)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Skype)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Mobile)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Mobile)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Github)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Github)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Linkedin)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Linkedin)
                        </dd>

                        <dt>
                            @Html.Label("Photo: ")
                        </dt>

                        <dd>
                            <div class="mb-20 mb-md-10">
                                @if (Model.ImagePath != null)
                                {
                                    <img width="300" height="300" src="@Url.Action("GetImageToUser", "Users", new { id = Model.Id })" />
                                }
                            </div>
                        </dd>

                    </dl>
                </div>
            </div>
        </div>
    </div>
</section>