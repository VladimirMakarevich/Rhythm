@model List<Rhythm.Areas.ChiefAdmin.Models.ChiefUserAdminViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/ChiefAdmin/Views/Shared/_Layout.cshtml";
}

<div class="container relative">
    <h2 class="align-center font-alt uppercase">Users</h2>
    <div class="blog-item-body container">
        <p>
            <div class="blog-item-foot">
                <a href="@Url.Action("Create", "Users")" class="btn btn-mod btn-round  btn-small"> Create New </a>
            </div>
        </p>
        <table class="table">
            <tr>
                <th>
                    FirstName
                </th>
                <th>
                    LastName
                </th>
                <th>
                    MiddleName
                </th>
                <th>
                    Birth
                </th>
                <th>
                    Email
                </th>
                <th>
                    NamePortfolio
                </th>
                <th></th>
                <th></th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MiddleName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Birth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PortfolioViewModel.NamePortfolio)
                    </td>
                    <td>
                        <div class="blog-item-foot">
                            <a href="@Url.Action("Edit", "Users", new { id = item.ChiefUserId })" class="btn btn-mod btn-round  btn-small"> Edit </a>
                        </div>
                    </td>
                    <td>
                        <div class="blog-item-foot">
                            <a href="@Url.Action("Details", "Users", new { id = item.ChiefUserId })" class="btn btn-mod btn-round  btn-small"> Details </a>
                        </div>
                    </td>
                    <td>
                        <div class="blog-item-foot">
                            <a href="@Url.Action("Delete", "Users", new { id = item.ChiefUserId })" class="btn btn-mod btn-round  btn-small"> Delete </a>
                        </div>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>