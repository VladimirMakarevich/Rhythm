@model List<Rhythm.Domain.Model.Comment>
@{
    <link href="~/Content/table.css" rel="stylesheet" />
    Layout = "~/Areas/ChiefAdmin/Views/Shared/_Layout.cshtml";
}

<div class="container relative">
    <h1 class="align-center font-alt uppercase">Comment</h1>
    <div class="blog-item-body container">

        <table>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Comment</th>
                <th>Change</th>
                <th>Delete</th>
            </tr>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m => p.ID)</td>
                    <td>@Html.DisplayFor(m => p.NameUserSender)</td>
                    <td>@Html.DisplayFor(m => p.EmailUserSender)</td>
                    <td>@Html.DisplayFor(m => p.Comment1)</td>
                    <td>
                        <div class="blog-item-foot">
                            <a href="@Url.Action("Comment", "Update", new { id = p.ID })" target="_blank" class="btn btn-mod btn-round  btn-small">Change </a>
                        </div>
                    </td>
                    <td>
                        <div class="blog-item-foot">
                            <a href="@Url.Action("Comment", "Delete", new { id = p.ID })" class="btn btn-mod btn-round  btn-small">Delete </a>
                        </div>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>