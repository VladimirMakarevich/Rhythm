@model List<Rhythm.Areas.ChiefAdmin.Models.CommentAdminViewModel>
@{
    <link href="~/Content/table.css" rel="stylesheet" />
    Layout = "~/Areas/ChiefAdmin/Views/Shared/_Layout.cshtml";
}
<br /><br /><br />
<div class="container relative">
    <h2 class="align-center font-alt uppercase">List Comments</h2>
    <div class="blog-item-body container">

        <table>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Comment</th>
                <th>Change</th>
                <th>Delete</th>
            </tr>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m => p.Id)</td>
                    <td>@Html.DisplayFor(m => p.NameUserSender)</td>
                    <td>@Html.DisplayFor(m => p.EmailUserSender)</td>
                    <td>@Html.DisplayFor(m => p.CommentMessage)</td>
                    <td>
                        <div class="blog-item-foot">
                            <a href="@Url.Action("Comment", "Update", new { id = p.Id })" class="btn btn-mod btn-round  btn-small">Change </a>
                        </div>
                    </td>
                    <td>
                        <div class="blog-item-foot">
                            <a href="@Url.Action("Comment", "Delete", new { id = p.Id })" class="btn btn-mod btn-round  btn-small">Delete </a>
                        </div>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>