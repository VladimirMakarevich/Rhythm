@model List<Rhythm.Areas.ChiefAdmin.Models.PostAdminViewModel>
@{
    <link href="~/Content/table.css" rel="stylesheet" />
    Layout = "~/Areas/ChiefAdmin/Views/Shared/_Layout.cshtml";
}
<br /><br /><br />
<div class="container relative">
    <h2 class="align-center font-alt uppercase">list Posts</h2>
    <div class="blog-item-body container">

        <table>
            <tr>
                <th>ID</th>
                <th>Sender</th>
                <th>Title</th>
                <th>Date</th>
                <th>Img</th>
                <th>Change</th>
                <th>Image</th>
                <th>Delete</th>
            </tr>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m => p.Id)</td>
                    <td>@Html.DisplayFor(m => p.NameSenderPost)</td>
                    <td>@Html.DisplayFor(m => p.Title)</td>
                    <td>@Html.DisplayFor(m => p.PostedOn)</td>
                    <td>
                        @if (p.ImageData != null)
                        {
                            <img width="150" height="150" src="@Url.Action("GetImage", "Home", new { id = p.Id })" />
                        }
                    </td>
                    <td>
                        <div class="blog-item-foot">
                            <a href="@Url.Action("Post", "Update", new { id = p.Id })" class="btn btn-mod btn-round  btn-small">Change </a>
                        </div>
                    </td>
                    <td>
                        <div class="blog-item-foot">
                            <a href="@Url.Action("Image", "Update", new { id = p.Id })" class="btn btn-mod btn-round  btn-small">Image </a>
                        </div>
                    </td>
                    <td>
                        <div class="blog-item-foot">
                            <a href="@Url.Action("Post", "Delete", new { id = p.Id })" class="btn btn-mod btn-round  btn-small">Delete </a>
                        </div>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>