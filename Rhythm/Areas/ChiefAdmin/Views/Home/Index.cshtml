@model Rhythm.Areas.ChiefAdmin.Models.Content

@{
    <link href="~/Content/table.css" rel="stylesheet" />
    Layout = "~/Areas/ChiefAdmin/Views/Shared/_Layout.cshtml";
}

<br /><br /><br />
<div class="container relative">
    <h2 class="align-center font-alt uppercase">Posts</h2>
    <div class="blog-item-body container">

        <table>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Published</th>
                <th>PostedOn</th>
                <th>Change</th>
                <th>Delete</th>
            </tr>
            @foreach (var p in Model.Posts)
            {
                <tr>
                    <td>@Html.DisplayFor(m => p.ID)</td>
                    <td>@Html.DisplayFor(m => p.Title)</td>
                    <td>@Html.DisplayFor(m => p.Published)</td>
                    <td>@Html.DisplayFor(m => p.PostedOn)</td>
                    <td>
                        <div class="blog-item-foot">
                            <a href="@Url.Action("Post", "Update", new { id = p.ID })" target="_blank" class="btn btn-mod btn-round  btn-small">Change </a>
                        </div>
                    </td>
                    <td>
                        <div class="blog-item-foot">
                            <a href="@Url.Action("Post", "Delete", new { id = p.ID })" class="btn btn-mod btn-round  btn-small">Delete </a>
                        </div>
                    </td>
                </tr>
            }
        </table>
        <!-- Read More Link -->
        <div class="blog-item-foot">
            <a href="@Url.Action("listPosts", "Home")" target="_blank" class="btn btn-mod btn-round  btn-small">View all </a>
        </div>
    </div>


    <hr class="mb-40" />

    <h2 class="align-center font-alt uppercase">Categories</h2>
