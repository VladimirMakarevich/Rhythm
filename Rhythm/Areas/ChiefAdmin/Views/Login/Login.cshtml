@model Rhythm.Areas.ChiefAdmin.Models.LoginViewModel

@{
    Layout = "~/Areas/ChiefAdmin/Views/Shared/_Login.cshtml";
    ViewBag.Title = "Log in";
}
<br /><br /><br />
<h2 class="align-center font-alt uppercase">@ViewBag.Title.</h2>

<!-- Section -->
<section>
    <div class="row">
        <div class="col-md-6 col-md-offset-2">
            @using (Html.BeginForm("Login", "Login", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @role = "form", @class = "form" }))
            {
                <div class="align pt-10">
                    <a href="@Url.Action("Index", "Home", new { area = "" }, null)" class="submit_btn btn btn-mod btn-small btn-round" id="submit_btn"> Back to Blog </a>
                </div>
                <h4>Use a local account to log in.</h4>
                <hr />
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                    <div class="mb-20 mb-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "input-md form-control", @placeholder = "Email" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                    <div class="mb-20 mb-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "input-md form-control", @placeholder = "Password" })
                    </div>
                </div>
                <div class="mb-20 mb-md-10">
                    <label class="checkbox-inline" />
                    @Html.CheckBoxFor(m => m.RememberMe)
                    @Html.LabelFor(m => m.RememberMe)
                </div>
                <div class="cf-right-col">
                    <!-- Send Button -->
                    <div class="align pt-10">
                        <button type="submit" class="submit_btn btn btn-mod btn-small btn-round" id="submit_btn">Log in</button>
                    </div>
                </div>
            }
        </div>

    </div>
</section>