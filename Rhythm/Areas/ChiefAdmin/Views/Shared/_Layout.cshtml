<!DOCTYPE html>
<html>
<head>
    <!--TODO: Remove SEO-->
    <title>@ViewBag.Title</title>
    <meta name="description" content="">
    <meta name="keywords" content="">
    <meta charset="utf-8">
    <meta name="author" content="Vladimir Makarevich">
    <!--[if IE]><meta http-equiv='X-UA-Compatible' content='IE=edge,chrome=1'><![endif]-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />

    <!-- Favicons -->
    <link rel="shortcut icon" href="~/Content/img/favicon.png">
    <link rel="apple-touch-icon" href="~/Content/img/apple-touch-icon.png">
    <link rel="apple-touch-icon" sizes="72x72" href="~/Content/img/apple-touch-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="114x114" href="~/Content/img/apple-touch-icon-114x114.png">

    @Styles.Render("~/Content/Style")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="appear-animate">
    <!-- Page Loader -->
    <div class="page-loader">
        <div class="loader">Loading...</div>
    </div>
    <!-- End Page Loader -->
    <!-- Page Wrap -->
    <div class="page" id="top">
        <!-- Navigation panel -->
        <nav class="main-nav js-stick">
            <div class="full-wrapper relative clearfix">
                <!-- Logo ( * your text or image into link tag *) -->
                <div class="nav-logo-wrap local-scroll">
                    <a href="@Url.Action("Index", "Home")" class="logo">
                        Admin
                    </a>
                    @Html.Partial("_LoginPartial")
                </div>
                <div class="mobile-nav">
                    <img src="" alt="" />
                    <i class="fa fa-bars"></i>
                </div>

                <!-- Main Menu -->
                <div class="inner-nav desktop-nav">
                    <ul class="clearlist">
                        <li>@Html.ActionLink("Go to blog", "Index", "Home", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Users", "Index", "Users")</li>
                        <li>@Html.ActionLink("Portfolios", "Index", "Portfolios")</li>
                        <li>
                            <a href="#" class="mn-has-sub">Edit <i class="fa fa-angle-down"></i></a>
                            <!-- Sub -->
                            <ul class="mn-sub">
                                <li>
                                    <a href="@Url.Action("Post","Edit")">Post <i class="fa fa-angle"></i></a>
                                    <a href="@Url.Action("Category","Edit")">Category <i class="fa fa-angle"></i></a>
                                    <a href="@Url.Action("Tag","Edit")">Tag <i class="fa fa-angle"></i></a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a href="#" class="mn-has-sub">Change <i class="fa fa-angle-down"></i></a>
                            <!-- Sub -->
                            <ul class="mn-sub">
                                <li>
                                    <a href="@Url.Action("listPosts","Home")">Post <i class="fa fa-angle"></i></a>
                                    <a href="@Url.Action("listCategories","Home")">Category <i class="fa fa-angle"></i></a>
                                    <a href="@Url.Action("listTags","Home")">Tag <i class="fa fa-angle"></i></a>
                                    <a href="@Url.Action("listComments","Home")">Comment <i class="fa fa-angle"></i></a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a href="#" class="mn-has-sub">Delete <i class="fa fa-angle-down"></i></a>
                            <!-- Sub -->
                            <ul class="mn-sub">
                                <li>
                                    <a href="@Url.Action("listPosts","Home")">Post <i class="fa fa-angle"></i></a>
                                    <a href="@Url.Action("listCategories","Home")">Category <i class="fa fa-angle"></i></a>
                                    <a href="@Url.Action("listTags","Home")">Tag <i class="fa fa-angle"></i></a>
                                    <a href="@Url.Action("listComments","Home")">Comment <i class="fa fa-angle"></i></a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <!-- End Main Menu -->
            </div>
        </nav>
        <!-- End Navigation panel -->
        <!-- Section -->

        @RenderBody()

        <!-- End Section -->
        <!-- Footer -->
        <footer class="page-section bg-gray-lighter footer pb-60">
            <div class="container">
                <!-- Footer Logo -->
                <div class="local-scroll mb-30 wow fadeInUp" data-wow-duration="1.5s">
                    <a href="#top"><img src="~/Content/img/logo-footer.png" width="78" height="36" alt="" /></a>
                </div>
                <!-- End Footer Logo -->
                <!-- Footer Text -->
                <div class="footer-text">
                    <!-- Copyright -->
                    <div class="footer-copy font-alt">
                        <a href="http://google.com" target="_blank">&copy; @DateTime.Now.Year</a>.
                    </div>
                    <!-- End Copyright -->
                    <div class="footer-made">
                        Vladimir Makarevich - ASP.NET MVC Developer
                    </div>
                </div>
                <!-- End Footer Text -->
            </div>
            <!-- Top Link -->
            <div class="local-scroll">
                <a href="#top" class="link-to-top"><i class="fa fa-caret-up"></i></a>
            </div>
            <!-- End Top Link -->
        </footer>
        <!-- End Foter -->
    </div>
    <!-- End Page Wrap -->
    @Scripts.Render("~/bundles/rhythm/jquery")
    @Scripts.Render("~/bundles/rhythm/jqueryval")
    @Scripts.Render("~/bundles/rhythm/allJS")
    <!--[if lt IE 10]><script type="text/javascript" src="~/Script/rhythm/placeholder.js"></script><![endif]-->
    @RenderSection("scripts", required: false)
</body>
</html>
