@model Rhythm.Models.PostListViewModel

@{
    ViewBag.Title = "Posts";
    ViewBag.Text = "";
    ViewBag.WordFirst = "C#";
    ViewBag.WordSecond = "ASP.NET MVC";
    ViewBag.WordThird = "WEB";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Partial("_NavigationPanel")
@Html.Partial("_HeadSection")
<!-- for renderBody -->
<section class="page-section">
    <div class="container relative">
        <div class="row">
            <!-- for renderBody -->
            <!-- Content -->
            <div class="col-sm-8">
                @foreach (var post in Model.PostsViewModel)
                {
                    <!-- Post -->
                    <div class="blog-item">
                        <!-- Post Title -->
                        <h2 class="blog-item-title">@Html.ActionLink(@post.Title, "Post", new { id = post.Id })</h2>
                        <!-- Author, Categories, Comments -->
                        <div class="blog-item-data">
                            <a><i class="fa fa-clock-o"></i> @post.PostedOn </a>
                            <span class="separator">&nbsp;</span>
                            <a><i class="fa fa-user"></i> @post.NameSenderPost </a>
                            <span class="separator">&nbsp;</span>
                            @*<a><i class="fa fa-code"></i> @post.Category.Name </a>*@
                            <span class="separator">&nbsp;</span>
                            <a><i class="fa fa-comments"></i> Comments @post.CountComments </a>
                        </div>
                        @if (post.ImageData != null && post.ImageData.Any())
                        {
                            <img width="500" height="333" src="@Url.Action("GetImage", "Posts", new { id = post.Id })" />
                        }
                        <br />
                        <div class="blog-item-body">
                            <p>
                                @Html.Raw(post.ShortDescription)
                            </p>
                        </div>
                        <!-- Read More Link -->
                        <div class="blog-item-foot">
                            @Html.ActionLink("Read More", "Post", new { id = post.Id }, new { @class = "btn btn-mod btn-round  btn-small" })
                        </div>
                    </div>
                <!-- End Post -->
                }
                <div class="pagination">
                    @Html.PageLinksLeft(Model.PagingView, x => Url.Action("Index", new { Page = x }))
                    @Html.PageLinks(Model.PagingView, x => Url.Action("Index", new { Page = x }))
                    @Html.PageLinksRight(Model.PagingView, x => Url.Action("Index", new { Page = x }))
                </div>
            </div>
            <!-- End Content -->
            @Html.Partial("_Sidebar")
        </div>
    </div>
</section>