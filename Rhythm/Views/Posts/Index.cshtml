@model Rhythm.Models.PostListViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- for renderBody -->
<section class="page-section">
    <div class="container relative">
        <div class="row">
            <!-- for renderBody -->
            <!-- Content -->
            <div class="col-sm-8">
                @foreach (var p in Model.Posts)
                {
                    <!-- Post -->
                    <div class="blog-item">
                        <!-- Post Title -->
                        <h2 class="blog-item-title font-alt">@Html.ActionLink(@p.Title, "Post", new { id = p.ID })</h2>
                        <!-- Author, Categories, Comments -->
                        <div class="blog-item-data">
                            <a href="#"><i class="fa fa-clock-o"></i>@p.PostedOn</a>
                            <span class="separator">&nbsp;</span>
                            <a href="#"><i class="fa fa-user"></i>@p.NameSenderPost</a>
                            <span class="separator">&nbsp;</span>
                            <i class="fa fa-folder-open"></i>
                            <a href="#">@p.Category1.Name</a>
                            <span class="separator">&nbsp;</span>
                            <a href="#"><i class="fa fa-comments"></i>Comments @p.CountComments</a>
                        </div>
                        <div class="blog-item-body">
                            <p>
                                @p.ShortDescription
                            </p>
                        </div>
                        <!-- Read More Link -->
                        <div class="blog-item-foot">
                            @Html.ActionLink("Read More", "Post", new { id = p.ID }, new { @class = "btn btn-mod btn-round  btn-small" })
                        </div>
                    </div>
                <!-- End Post -->
                }
                <div class="pagination">
                    <a href=""><i class="fa fa-angle-left"></i></a>
                    @Html.PageLinks(Model.PagingView, x => Url.Action("List", new { Page = x }))
                    <a href=""><i class="fa fa-angle-right"></i></a>
                </div>
            </div>
            <!-- End Content -->
            @Html.Partial("_Sidebar")
        </div>
    </div>
</section>