@model Rhythm.Models.PostSingleViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Partial("_NavigationPanel")
<section class="page-section">
    <div class="container relative">
        <div class="row">
            <!-- Content -->
            <div class="col-sm-8">
                <!-- Post -->
                <div class="blog-item mb-80 mb-xs-40">
                    <!-- Text -->
                    <div class="blog-item-body">
                        <h1 class="mt-0">@Model.PostViewModel.Title</h1>
                        <div class="lead">
                            <hr class="mb-40" />
                            <div>
                                @if (Model.PostViewModel.ImageData != null && Model.PostViewModel.ImageData.Any())
                                {
                                    <img width="500" height="333" src="@Url.Action("GetImage", "Posts", new { id = Model.PostViewModel.Id })" />
                                }
                            </div>
                            <hr class="mb-40" />
                            @Html.Raw(Model.PostViewModel.ShortDescription)
                        </div>
                        <hr class="mb-40" />
                        @Html.Raw(Model.PostViewModel.DescriptionPost)
                    </div>
                    <!-- End Text -->
                </div>
                <!-- End Post -->
                @Html.Partial("_CommentsList")
                <!-- Prev/Next Post -->
                <div class="clearfix mt-40">
                    @if (Model.PostViewModel.Id == 1)
                    {
                        <a href="#"></a>
                    }
                    else
                    {
                        @Html.ActionLink("Prev post", "Post", new { id = Model.PostViewModel.Id, flag = false }, new { @class = "blog-item-more left" })
                    }

                    @if (Model.PostViewModel.Id >= Model.CountPosts)
                    {
                        <a href="#"></a>
                    }
                    else
                    {
                        @Html.ActionLink("Next post", "Post", new { id = Model.PostViewModel.Id, flag = true }, new { @class = "blog-item-more right" })
                    }
                </div>
                <!-- End Prev/Next Post -->
            </div>
            <!-- End Content -->
            @Html.Partial("_Sidebar")
        </div>
    </div>
</section>
<!-- End Section -->
