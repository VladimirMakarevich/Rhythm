<!-- Sidebar -->
<div class="col-sm-4 col-md-3 col-md-offset-1 sidebar">
    <!-- TODO: Search Widget -->
    <div class="widget">
        @using (Html.BeginForm("Index", "Search", FormMethod.Post, new { @class = "form-inline form", @role = "form" } ))
        {
            @Html.AntiForgeryToken()
            <div class="search-wrap">
                <button class="search-button animate" type="submit" title="Start Search">
                    <i class="fa fa-search"></i>
                </button>
                @Html.TextBox("item", "", new { @class="form-control search-field", @placeholder="Search..."})
            </div>
        }
    </div>
    <!-- End Search Widget -->
    <div class="widget">
        @Html.Action("RecentCategories", "Recents")
    </div>
    <!-- End Widget -->
    <div class="widget">
        @Html.Action("RecentTags", "Recents")
    </div>
    <!-- End Widget -->
    <div class="widget">
        @Html.Action("RecentPosts", "Recents")
    </div>
    <!-- End Widget -->
    <div class="widget">
        @Html.Action("RecentComments", "Recents")
    </div>
    <!-- End Widget -->
    <!-- TODO: Widget Articles-->
    <div class="widget">
        @Html.Action("RecentArticleWidgets", "Recents")
    </div>
    <!-- End Widget -->
    <!-- TODO: Widget Archove-->
    <div class="widget">
        @Html.Action("RecentArchives","Recents")
    </div>
    <!-- End Widget -->
</div>
<!-- End Sidebar -->