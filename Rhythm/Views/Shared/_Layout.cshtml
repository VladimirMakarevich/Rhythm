@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta name="description" content="">
    <meta name="keywords" content="">
    <meta charset="utf-8">
    <meta name="author" content="Vladimir Makarevich">
    <!--[if IE]><meta http-equiv='X-UA-Compatible' content='IE=edge,chrome=1'><![endif]-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />

    <!-- Favicons -->
    <link rel="shortcut icon" href="~/Content/img/favicon.png">
    <link rel="apple-touch-icon" href="~/Content/img/apple-touch-icon.png">
    <link rel="apple-touch-icon" sizes="72x72" href="~/Content/img/apple-touch-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="114x114" href="~/Content/img/apple-touch-icon-114x114.png">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="appear-animate">
    <!-- Page Loader -->
    <div class="page-loader">
        <div class="loader">Loading...</div>
    </div>
    <!-- End Page Loader -->
    <!-- Page Wrap -->
    <div class="page" id="top">
        <!-- Navigation panel -->
        <nav class="main-nav js-stick">
            <div class="full-wrapper relative clearfix">
                <div class="nav-logo-wrap local-scroll">
                    <a href="@Url.Action("Index", "Home")" class="logo">
                        <img src="~/Content/img/logo-dark.png" alt="" />
                    </a>
                </div>
                <div class="mobile-nav">
                    <img src="~/Content/img/logo-dark.png" alt="" />
                    <i class="fa fa-bars"></i>
                </div>
                <!-- Main Menu -->
                <div class="inner-nav desktop-nav">
                    <ul class="clearlist">
                        @*@Html.RouteLink*@
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Post", "Index", "Posts")</li>
                        <li>@Html.ActionLink("Article", "Index", "Articles")</li>
                        <li>@Html.ActionLink("Library", "Index", "Library")</li>
                        <li>@Html.ActionLink("Portfolio", "Index", "Portfolio")</li>
                        <li>@Html.ActionLink("About me", "Index", "AboutMe")</li>
                        <li>@Html.ActionLink("Contact", "Index", "Contacts")</li>
                        <li><a>&nbsp;</a></li>
                        <li>
                            <a href="#" class="mn-has-sub">Eng <i class="fa fa-angle-down"></i></a>
                            <ul class="mn-sub">
                                <li><a href="">English</a></li>
                                @*<li><a href="">Russian</a></li>
                                <li><a href="">Belarusian</a></li>*@
                            </ul>
                        </li>
                    </ul>
                </div>
                <!-- End Main Menu -->
            </div>
        </nav>
        <!-- End Navigation panel -->
        <!-- Section -->

        @RenderBody()

        <!-- End Section -->
        <!-- Footer -->
        <footer class="page-section bg-gray-lighter footer pb-60">
            <div class="container">
                <!-- Footer Logo -->
                <div class="local-scroll mb-30 wow fadeInUp" data-wow-duration="1.5s">
                    <a href="#top"><img src="~/Content/img/logo-footer.png" width="78" height="36" alt="" /></a>
                </div>
                <!-- End Footer Logo -->
                <!-- TODO: Social Links -->
                <div class="footer-social-links mb-110 mb-xs-60">
                    <a href="http://facebook.com/Makarevich23" title="Facebook" target="_blank"><i class="fa fa-angle-down"></i></a>
                    <a href="http://github.com/VladimirMakarevich" title="GitHub" target="_blank"><i class="fa fa-angle-down"></i></a>
                    <a href="http://https://plus.google.com/+MakarevichVladimir" title="Google+" target="_blank"><i class="fa fa-angle-down"></i></a>
                    <a href="https://www.linkedin.com/in/vladimir23" title="LinkedIn+" target="_blank"><i class="fa fa-angle-down"></i></a>
                    <a href="http://google.com" title="Google" target="_blank"><i class="fa fa-angle-down"></i></a>
                </div>
                <!-- End Social Links -->
                <!-- Footer Text -->
                <div class="footer-text">
                    <!-- Copyright -->
                    <div class="footer-copy font-alt">
                        <a href="http://google.com" target="_blank">&copy; @DateTime.Now.Year</a>.
                    </div>
                    <!-- End Copyright -->
                    <div class="footer-made">
                        Vladimir Makarevich - ASP.NET MVC Developer
                    </div>
                </div>
                <!-- End Footer Text -->
            </div>
            <!-- Top Link -->
            <div class="local-scroll">
                <a href="#top" class="link-to-top"><i class="fa fa-caret-up"></i></a>
            </div>
            <!-- End Top Link -->
        </footer>
        <!-- End Foter -->
    </div>
    <!-- End Page Wrap -->
    @Scripts.Render("~/bundles/rhythm/jquery")
    @Scripts.Render("~/bundles/rhythm/bootstrap")
    @Scripts.Render("~/bundles/rhythm/all")
    @Scripts.Render("~/bundles/rhythm/contact")
    @Scripts.Render("~/bundles/rhythm/imagesloaded")
    @Scripts.Render("~/bundles/rhythm/isotope")
    @Scripts.Render("~/bundles/rhythm/masonry")
    @Scripts.Render("~/bundles/rhythm/owl")
    @Scripts.Render("~/bundles/rhythm/moothScroll")
    @Scripts.Render("~/bundles/rhythm/wow")
    <!--[if lt IE 10]><script type="text/javascript" src="js/placeholder.js"></script><![endif]-->
    @RenderSection("scripts", required: false)
</body>
</html>
