@model Rhythm.Models.CommentViewModel
<!-- Add Comment -->
<div class="mb-80 mb-xs-40">
    <h4 class="blog-page-title font-alt">Leave a comment</h4>
    <!-- Form -->
    @using (Html.BeginForm("Add", "Comments", FormMethod.Post, new { id = "userComment" }))
    {
        //<form method="post" action="#" id="form" role="form" class="form">
        <div class="row mb-20 mb-md-10">
            <div class="col-md-6 mb-md-10">
                <!-- Name -->
                @Html.TextBoxFor(model => model.Comment.NameUserSender, new { @class = "input-md form-control required" })
                @*<input type="text" name="name" id="name" class="input-md form-control" placeholder="Name *" maxlength="100" required>*@
            </div>
            <div class="col-md-6">
                <!-- Email -->
                @Html.TextBoxFor(model => model.Comment.EmailUserSender, new { @class = "input-md form-control required" })
                @*<input type="email" name="email" id="email" class="input-md form-control" placeholder="Email *" maxlength="100" required>*@
            </div>
        </div>
            <!-- Comment -->
            <div class="mb-30 mb-md-10">
                @Html.TextAreaFor(model => model.Comment.Comment1, new { @class = "input-md form-control", rows = "6" })
                @*<textarea name="text" id="text" class="input-md form-control" rows="6" placeholder="Comment" maxlength="400"></textarea>*@
            </div>
            @Html.CheckBoxFor(model => model.IsHuman == false, new { @class = "input-md form-control" })
            <!-- Send Button -->
            <button type="submit" class="btn btn-mod btn-medium btn-round btn-round">
                Send comment
            </button>
        //</form>
    }
    <!-- End Form -->
</div>

<!-- End Add Comment -->
