@model List<Rhythm.Domain.Model.Comment>


@foreach (var comment in Model)
{
        <!-- Comment Item -->
    <li class="media comment-item">
        @if (@comment.DescriptionComment)
        {
            <a class="pull-left" href="#"><img src="~/Content/img/feature-2.png" alt="" width="90" height="90"></a>
            <div class="media-body">
                <div class="comment-item-data">
                    <div class="comment-author">
                        <a href="#">@comment.NameUserSender</a>
                    </div>
                    @comment.PostedOn<span class="separator">&mdash;</span>
                    <a href="#"><i class="fa fa-comment"></i>&nbsp;Reply</a>
                </div>
                <p>
                    @comment.Comment1
                </p>
            </div>
        }
        else
        {
             <!-- Comment of second level -->
            <div class="media comment-item" style="padding: 80px">
                <a class="pull-left" href="#"><img src="~/Content/img/feature-2.png" alt="" width="90" height="90"></a>
                <div class="media-body">
                    <div class="comment-item-data">
                        <div class="comment-author">
                            <a href="#">@comment.NameUserSender</a>
                        </div>
                        @comment.PostedOn<span class="separator">&mdash;</span>
                        <a href="#"><i class="fa fa-comment"></i>&nbsp;Reply</a>
                    </div>
                    <p>
                        @comment.Comment1
                    </p>

                </div>
            </div>
              <!-- End Comment of second level -->
        }
    </li>
        <!-- End Comment Item -->
}
<hr class="mb-70 mb-xs-30" />
<!-- Add Comment -->
<div class="mb-80 mb-xs-40">
    <h4 class="blog-page-title font-alt">Leave a comment</h4>
    @Html.Action("AddComment", "Recents")
</div>

<!-- End Add Comment -->
